extends layout

block content
  h1= title

  div(class='form-group row')
    form(action='/generate',method='post')
      div
        label(for='text') Enter String here
            input(id='str',type='text',value='',name='str', required)
        label(for='text') Enter Image Url (for example : http://www.gstatic.com/tv/thumb/tvbanners/12502846/p12502846_b_v8_aa.jpg)
            input(id='str',type='text',value='',name='url')
      div(class='col-md-1')
        input(type='submit',value='Click to Fit', class='btn btn-primary')

  div(class='row')
    div(class='col-md-6')
      h3 Processed Image
      img(src='/images/resulted_file.jpg')
    div(class='col-md-6')
      h3 Default Image
      img(src='/images/default.jpg')
